CheckOptions:
 - key: bugprone-assert-side-effect.AssertMacros
   value: "assert,_ASSERT,GADGET_ASSERT"

 - key: bugprone-misplaced-widening-cast.CheckImplicitCasts
   value: true

 - key: "bugprone-sizeof-expression.WarnOnSizeOfPointer"
   value: true
   
 - key: "cppcoreguidelines-narrowing-conversions.PedanticMode"
   value: true
   
 - key: "cppcoreguidelines-pro-type-const-cast.StrictMode"
   value: true
   
 - key: "cppcoreguidelines-special-member-functions.AllowSoleDefaultDtor"
   value: true
   
 - key: "cppcoreguidelines-special-member-functions.AllowMissingMoveFunctions"
   value: true
   
 - key: "cppcoreguidelines-special-member-functions.AllowImplicitlyDeletedCopyOrMove"
   value: true

 - key: "hicpp-signed-bitwise.IgnorePositiveIntegerLiterals"
   value: true